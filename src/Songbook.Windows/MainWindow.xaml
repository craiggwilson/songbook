<mahapps:MetroWindow x:Class="Songbook.Windows.MainWindow"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:local="clr-namespace:Songbook.Windows"
                     xmlns:mahapps="http://metro.mahapps.com/winfx/xaml/controls"
                     mc:Ignorable="d"
                     x:Name="Window"
                     Title="Songbook" 
                     Height="405.86" 
                     Width="639.339"
                     ResizeMode="CanResizeWithGrip" 
                     BorderBrush="{DynamicResource AccentColorBrush}"
                     BorderThickness="1"
                     Margin="0"
                     Padding="0"
                     DataContext="{Binding ViewModel, ElementName=Window}">
    <mahapps:MetroWindow.Flyouts>
        <mahapps:FlyoutsControl>
            <mahapps:Flyout x:Name="flyoutSettings" 
                            Header="Settings" 
                            Position="Right" 
                            Width="300"
                            Theme="Accent"
                            CloseCommand="{Binding HideSettingsCommand}">

            </mahapps:Flyout>
        </mahapps:FlyoutsControl>
    </mahapps:MetroWindow.Flyouts>
    <mahapps:MetroWindow.RightWindowCommands>
        <mahapps:WindowCommands>
            <Button Content="settings" Command="{Binding ShowSettingsCommand}" />
        </mahapps:WindowCommands>
    </mahapps:MetroWindow.RightWindowCommands>
    <Grid>
        <TabControl x:Name="tabControl" 
                    VerticalAlignment="Stretch" 
                    HorizontalAlignment="Stretch" 
                    Grid.ColumnSpan="2"
                    Margin="0"
                    Padding="0">
            <TabItem Header="Songs" 
                     DataContext="{Binding SongsTab}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border BorderThickness="0 0 1 0" 
                            BorderBrush="{DynamicResource AccentColorBrush}">
                        <Grid Grid.ColumnSpan="1" 
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="31"/>
                                <RowDefinition Height="31"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" 
                                        Orientation="Horizontal" 
                                        Margin="4 0 0 4">
                                <Button Command="{Binding OpenDirectory}">Open...</Button>
                            </StackPanel>
                            <Border Grid.Row="1" 
                                    BorderThickness="0 1 0 1"
                                    BorderBrush="{DynamicResource AccentColorBrush}">
                                <TextBox Height="20" 
                                         BorderThickness="0"
                                         Text="{Binding Filter, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="4,0,0,4"
                                         mahapps:TextBoxHelper.Watermark="filter..."
                                         mahapps:TextBoxHelper.ClearTextButton="True"></TextBox>
                            </Border>
                            <ListBox Grid.Row="2" 
                                     Margin="4 0 0 0"
                                     VerticalAlignment="Stretch" 
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                                     ItemsSource="{Binding FilteredSongs}"
                                     DisplayMemberPath="Name" />
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            <TabItem Header="Set Lists">
            </TabItem>
        </TabControl>
    </Grid>
</mahapps:MetroWindow>
